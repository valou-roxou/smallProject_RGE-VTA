<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slideshow_constraint_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="centerCrop">

    <ImageView
        android:id="@+id/slideshow_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_picture" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/leftCustomButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/custom_slideshow_button"
        android:singleLine="false"
        android:text="@string/slideshow_left_button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rightCustomButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/custom_slideshow_button"
        android:singleLine="false"
        android:text="@string/slideshow_right_button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>